<Window x:Class="Bioskop.Forme.FrmSala"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bioskop.Forme"
        mc:Ignorable="d"
        Title="Dodaj /izmeni salu" Height="300" Width="400">
    <Grid>
        <Label Content="Broj mesta:" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtBrojMesta" HorizontalAlignment="Left" Height="23" Margin="130,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="txtBrojMesta_TextChanged"/>
        <Label Content="Rezervacija:" HorizontalAlignment="Left" Margin="30,67,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="cbRezervacija" HorizontalAlignment="Left" Margin="130,67,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Info" SelectedValuePath="rezervacijaID" SelectionChanged="cbRezervacija_SelectionChanged_1"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="64,172,0,0" VerticalAlignment="Top" Width="75" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="200,172,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkazi_Click"/>
    </Grid>
</Window>
