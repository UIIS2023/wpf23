<Window x:Class="Bioskop.Forme.FrmMusterija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bioskop.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni musteriju" Height="300" Width="350">
    <Grid>
        <Label Content="Ime:" HorizontalAlignment="Left" Margin="30,19,0,0" VerticalAlignment="Top" />
        <Label Content="Prezime:" HorizontalAlignment="Left" Margin="30,51,0,0" VerticalAlignment="Top" />
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="46,161,0,0" VerticalAlignment="Top" Width="88" Click="btnSacuvaj_Click" Height="31"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="207,161,0,0" VerticalAlignment="Top" Width="81" Click="btnOtkazi_Click" Height="31"/>
        <TextBox x:Name="txtIme" HorizontalAlignment="Left" Height="23" Margin="131,22,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="txtIme_TextChanged"/>
        <TextBox x:Name="txtPrezime" HorizontalAlignment="Left" Height="23" Margin="131,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="txtPrezime_TextChanged"/>
    </Grid>
</Window>
